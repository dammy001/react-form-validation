{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "typeRoots": [
        "."
      ],
      "types": [],
      "noEmit": true,
      "forceConsistentCasingInFileNames": true
    },
    "files": [
      "index.d.ts"
    ],
    "include": ["src", "index.d.ts"],
    "exclude": ["node_modules"]
  }